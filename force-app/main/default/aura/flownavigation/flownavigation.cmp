<aura:component implements="lightning:availableForFlowScreens" access="global" >
   <aura:attribute name="ScreenNumber" type="String" required="true" />
	<lightning:input id="nameinput" type="text" label="Next Screen" value="{!v.ScreenNumber}"/>
	<lightning:buttongroup >
         <lightning:button label="Goto1"  onclick="{!c.handleChange1}"/>
         <lightning:button label="Goto2"  onclick="{!c.handleChange2}"/>
         <lightning:button label="Goto3"  onclick="{!c.handleChange3}"/>
         <lightning:button label="GotoInput"  onclick="{!c.handleChange}"/>
    </lightning:buttongroup>
</aura:component>